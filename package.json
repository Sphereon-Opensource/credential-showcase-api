{
  "name": "credential-showcase-api.workspace",
  "private": true,
  "description": "Credential Showcase API (Workspace)",
  "version": "0.1.0",
  "author": "4Sure",
  "license": "Apache-2.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "prettier": "prettier --write \"{packages,__tests__,!dist}/**/*.{ts,js,json,md}\"",
    "test:ci": "jest --config=jest.json",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose --config=jest.json --coverage=true --detectOpenHandles",
    "clean": "turbo clean"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "turbo": "^2.4.0",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">= 20.0.0 < 22"
  },
  "packageManager": "pnpm@9.12.3"
}
